<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
<p><%= notice %></p>

<%= form_for(@contacts, url: confirm_contacts_path) do |f| %>
  <% if @contacts.errors.any? %>
    <div id="error_explanation">
      <h2><%= @contacts.errors.count %>件のエラーがエラーがあります。</h2>
      <ul>
        <% @contacts.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :お名前 %>
  <%= f.text_field :name, class: 'form-control' %>
  <br>
  <%= f.label :メールアドレス %>
  <%= f.text_field :email, class: 'form-control' %>
  <br>
  <%= f.label :お問い合わせ内容 %>
  <%= f.text_field :content, class: 'form-control' %>
  <br><br>
  <%= f.submit '送信', class: 'btn btn-primary btn-block' %>
<% end %>
<br>
<%= link_to "ブログ一覧画面にもどる", blogs_path %>
  </div>
</div>